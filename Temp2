import requests

upload_url = "https://graph.api.com/upload"
file_path = "/path/to/large_file.7z"
timeout = 60  # Timeout value in seconds

def upload_large_file(url, file_path, timeout):
    try:
        with open(file_path, "rb") as file:
            response = requests.put(url, data=file, timeout=timeout)
            response.raise_for_status()
            print("File upload successful!")
    except IOError as e:
        print("File read error:", e)
    except requests.exceptions.RequestException as e:
        print("File upload failed:", e)
        # Handle the error and retry or exit as needed

# Example usage
upload_large_file(upload_url, file_path, timeout)
